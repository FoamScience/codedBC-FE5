FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    movingWall
    {
        type            mixedCoded;
        redirectType    custom;
        code #{
            Info << " --- ---- ---- Executing custom BC" << endl;
            refGrad() = Field<scalar>(this->patch().size(), 0.0);
        #};  
    }

    fixedWalls
    {
        type            zeroGradient;
    }

    frontAndBack
    {
        type            empty;
    }
}

